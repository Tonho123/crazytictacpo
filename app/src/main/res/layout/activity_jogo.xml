<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:orientation="vertical"
    tools:context=".JogoActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:minHeight="60dp"
        android:background="@android:color/background_light">

        <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@android:color/background_dark"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111"></com.google.android.gms.ads.AdView>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="top">
                    <ImageView
                        android:id="@+id/gragImg11"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/tictacponicon"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"/>
                    <ImageView
                        android:id="@+id/gragImg22"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/tictacponicon"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/gragImg33"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/tictacponicon"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        android:layout_gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/gragImg44"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/tictacponicon"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:visibility="invisible"/>
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/dificcc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="OPONENTE: Algoritmo level 59b"
                android:textSize="18sp" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/contotno"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.20">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="40dp"
            android:background="@android:color/background_light">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.mrtechno.crazytictacpo.BoardClass
                    android:id="@+id/board"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="0dp" />

                <ImageView
                    android:id="@+id/img11"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@android:color/holo_red_dark"
                    android:src="@drawable/tesoura"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img12"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pedra"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img13"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@android:color/holo_green_light"
                    android:src="@drawable/papel"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img21"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/blue"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img22"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/black"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img23"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/green"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img31"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/red"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img32"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pink"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/img33"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/tictacponicon"
                    android:visibility="invisible" />
            </FrameLayout>
        </FrameLayout>
    </FrameLayout>

    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/gragImg4"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/black"
                            android:layout_weight="1"
                            android:layout_gravity="center"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/gragImg1"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/tesoura"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"/>

                            <ImageView
                                android:id="@+id/gragImg2"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/pedra"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"/>

                            <ImageView
                                android:id="@+id/gragImg3"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/papel"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"/>
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>